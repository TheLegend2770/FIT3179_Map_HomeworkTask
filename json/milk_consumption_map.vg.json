{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Milk Consumption Worldwide in 2022",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/TheLegend2770/FIT3179_Map_HomeworkTask/main/json/base_map.topojson.json",
    "format": {"type": "topojson", "feature": "base_map"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/TheLegend2770/FIT3179_Map_HomeworkTask/main/Data/Milk_Consumption.csv"
        },
        "key": "country",
        "fields": ["Active"]
      }
    },
    {"calculate": "datum.milkConsume + 0.1", "as": "Milk Consumption"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Milk Consumption",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "milkConsume", "type": "quantitative"}
    ]
  }
}
    
  
